{
  "name": "@weibo-archiver/extension",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "description": "Browser extension for weibo-archiver",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:web": "vite build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "check": "biome check --write .",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@webext-core/messaging": "^2.2.0",
    "@webext-core/storage": "^1.2.0",
    "alien-signals": "^2.0.5",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@weibo-archiver/core": "workspace:^",
    "wxt": "^0.20.6"
  }
}
