{
  "name": "@weibo-archiver/extension",
  "type": "module",
  "version": "0.6.2",
  "private": true,
  "description": "Browser extension for weibo-archiver",
  "scripts": {
    "dev": "wxt",
    "dev:chrome": "wxt -b chrome",
    "dev:firefox": "wxt -b firefox",
    "dev:edge": "wxt -b edge",
    "dev:safari": "wxt -b safari",
    "build": "wxt build",
    "build:chrome": "wxt build -b chrome",
    "build:firefox": "wxt build -b firefox",
    "build:edge": "wxt build -b edge",
    "build:safari": "wxt build -b safari",
    "zip": "wxt zip",
    "zip:all": "pnpm zip:chrome && pnpm zip:firefox && pnpm zip:edge",
    "zip:chrome": "wxt zip -b chrome",
    "zip:firefox": "wxt zip -b firefox",
    "zip:edge": "wxt zip -b edge",
    "zip:safari": "wxt zip -b safari",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@internationalized/date": "^3.10.0",
    "@tailwindcss/vite": "^4.1.16",
    "@webext-core/storage": "^1.2.0",
    "alien-signals": "^3.0.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.552.0",
    "motion": "^12.23.24",
    "next-themes": "^0.4.6",
    "radix-ui": "latest",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0",
    "vaul": "^1.1.2",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.12.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@weibo-archiver/core": "workspace:^",
    "@wxt-dev/module-react": "^1.1.5",
    "wxt": "^0.20.11"
  }
}
