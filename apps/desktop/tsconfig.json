{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@database": ["../../packages/database/src"],
      "@core/*": ["../../packages/core/src/*"],
      "@types": ["../../types/index"]
    },
    "types": [
      "node",
      "vite/client"
    ]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "../web/**/*"
  ]
}
