{
  "name": "weibo-archiver",
  "type": "module",
  "version": "0.2.2",
  "packageManager": "pnpm@8.15.3",
  "description": "Archive your Weibo posts before being banned completely.",
  "author": {
    "name": "Chilfish",
    "email": "chill4fish@gmail.com",
    "url": "https://chilfish.top"
  },
  "license": "MIT",
  "homepage": "https://github.com/Chilfish/Weibo-archiver.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chilfish/Weibo-archiver.git"
  },
  "scripts": {
    "dev:monkey": "pnpm -F monkey dev",
    "build:monkey": "pnpm -F monkey build",
    "dev:desktop": "pnpm rebuild:desktop && pnpm -C apps/desktop dev",
    "dev:web": "pnpm rebuild:core && pnpm -C apps/web dev",
    "build:desktop": "pnpm -C apps/desktop compile",
    "build:web": "pnpm -C apps/web build",
    "test:desktop": "pnpm -C apps/desktop test",
    "test:web": "pnpm -C apps/web test",
    "typecheck:desktop": "pnpm -C apps/desktop typecheck",
    "typecheck:web": "pnpm -C apps/web typecheck",
    "typecheck:ui": "pnpm -C packages/ui typecheck",
    "typecheck:core": "pnpm -C packages/core typecheck",
    "test": "echo pnpm test:desktop",
    "typecheck": "pnpm typecheck:desktop",
    "rebuild:core": "pnpm -C packages/core rebuild",
    "rebuild:desktop": "pnpm -C apps/desktop rebuild:sqlite",
    "lint": "eslint .",
    "prepare": "husky || true"
  },
  "dependencies": {
    "vue": "^3.4.19"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@types/node": "^20.11.19",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue-macros/volar": "^0.18.11",
    "consola": "^3.2.3",
    "cross-env": "7.0.3",
    "eslint": "npm:eslint-ts-patch@8.55.0-1",
    "eslint-plugin-format": "^0.1.0",
    "eslint-ts-patch": "8.55.0-1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "naive-ui": "^2.37.3",
    "pnpm": "^8.15.3",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "1.2.2",
    "vue-tsc": "^1.8.27"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
