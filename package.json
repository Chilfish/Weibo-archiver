{
  "type": "module",
  "version": "0.6.2",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "description": "Archive your Weibo posts before being banned completely.",
  "author": {
    "name": "Chilfish",
    "email": "chill4fish@gmail.com",
    "url": "https://github.com/Chilfish"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/Chilfish/Weibo-archiver.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chilfish/Weibo-archiver.git"
  },
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=9.4.0"
  },
  "scripts": {
    "dev:web": "pnpm -F web-v2 dev",
    "dev:monkey": "pnpm -F monkey dev",
    "build:web": "pnpm -F web-v2 build",
    "build:monkey": "pnpm -F monkey build",
    "build:ext": "pnpm -F extension zip:all",
    "build:cli": "pnpm -F shared build && pnpm -F weibo-archiver build",
    "preview:web": "pnpm -F web-v2 preview",
    "typecheck:web": "pnpm -F web-v2 typecheck",
    "lint": "eslint .",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.525.0",
    "reka-ui": "^2.3.2",
    "tailwind-merge": "^3.3.1",
    "webext-bridge": "^6.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "eslint": "^9.30.1",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^16.1.2",
    "pnpm": "^10.12.4",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vue-tsc": "^3.0.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "msw",
      "simple-git-hooks",
      "spawn-sync",
      "unrs-resolver",
      "vue-demi"
    ],
    "overrides": {
      "css-select": "5.1.0"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
