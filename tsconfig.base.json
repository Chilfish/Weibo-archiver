{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@weibo-archiver/core": ["packages/core/src/index.ts"],
      "@weibo-archiver/ui/*": ["packages/ui/src/*"],
      "@weibo-archiver/monkey/*": ["apps/monkey/*"],
      "@weibo-archiver/web/*": ["apps/web/*"]
    },
    "types": [
      "vite/client",
      "naive-ui/volar"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "apps",
    "packages",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
