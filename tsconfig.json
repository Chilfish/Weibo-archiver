{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["./*"],
      "@weibo-archiver/*": ["packages/*/src"],
      "@core/*": ["packages/core/src/*"]
    },
    "outDir": "dist/ts",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": [
      "vite/client"
    ],
    "useDefineForClassFields": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.d.ts",
    "packages/**/src/**/*.vue",
    "packages/**/src/vite.config.ts",
    "vite.config.ts"
  ]
}
