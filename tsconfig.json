{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["DOM", "ESNext"],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@weibo-archiver/core": ["packages/core"]
    },
    "types": [
      "vite/client"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "apps",
    "packages",
    "*.ts",
    "*.tsx",
    "*.d.ts",
    "apps/web/.nuxt/imports.d.ts",
    "eslint.config.js"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
